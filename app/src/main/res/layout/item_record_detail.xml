<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="3.5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_day_of_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:layout_marginEnd="5dp"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_year_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/text_day_of_week"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        app:group_background="@color/text_gray"
        app:group_center="false"
        app:group_height="28dp"
        app:group_has_header="false"
        app:group_padding_left="16dp"
        app:group_padding_right="16dp"
        app:group_text_size="14sp"
        app:group_text_color="#555555"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_background" />
</LinearLayout>